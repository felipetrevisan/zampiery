{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "apps/web/.next/**",
        "apps/studio/.sanity/**",
        "packages/**/dist/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "outputs": []
    }
  },
  "globalEnv": [
    "SANITY_API_READ_TOKEN",
    "SANITY_API_WRITE_TOKEN",
    "SANITY_STUDIO_DATASET",
    "SANITY_STUDIO_PROJECT_ID",
    "NEXTAUTH_URL",
    "NEXTAUTH_SECRET"
  ]
}